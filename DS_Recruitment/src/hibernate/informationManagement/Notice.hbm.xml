<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

	<class name="com.gdut.ds.beans.informationManagement.Notice" table="Notice" >
		<cache usage="read-write" />		<!-- 配置缓存（需要更新数据，那么使用读/写缓存） -->
		
		<id name="id" column="id">
			<generator class="increment"></generator>
		</id>
		
		<property name="topic" column="topic" type="string"></property>
		<property name="content" column="content" type="string"></property>
		<property name="time" column="time" type="timestamp"></property>	<!-- 时间戳能存储到时分秒 -->
		
	</class>

</hibernate-mapping>
 